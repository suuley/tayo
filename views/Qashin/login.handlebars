
 
    <section class="container">
        {{#each errors}}
        <div class="error">
          <p>{{text}}</p>
        </div>
      {{/each}}
        <h1>Login</h1>
        <form method="POST" action="/users/login">
            <div id="form-group"><label>Username:</label><input class="form-control" name="username" type="text"></div>
            <div id="form-group"><label>Password:</label><input class="form-control" name="password" type="password">
            </div><br><input class="btn btn-primary" type="submit" value="Submit">
        </div>
        </form>
        <br>
        <div class="text-center">
            <a class="d-block large mt-3" href="/users/register">Register an Account</a>
            <a class="d-block large" href="/users/resetpassword">Forgot Password?</a>
            <a class="d-block large" href="/">Home Page?</a>
    </section>