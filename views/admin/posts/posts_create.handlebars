<div class="container">
    <h1>Create New Post</h1>
    
    <div class="row p-4">
        <div class="col-md-10">
            <form action="/admin/posts/create" method="post" enctype="multipart/form-data">
                
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" name="title" id="title" placeholder="Enter The Title">
                </div>
               

                
                
                <div class="form-group">
                    <label for="description">Content</label>
                    <textarea name="body" id="summernote" class="form-control" placeholder="Enter your content here" rows="10"></textarea>
                </div>
                 <div class="form-group"><input type="file" accept="image/*" name="articleimage"></div>
                 <br>
                 <button class="btn btn-outline-success btn-lg" type="submit" value="Submit">Create Post</button>
                
            </form>
        </div>
    </div>
    
    
    
</div>
